{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "lib": ["es2021"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
